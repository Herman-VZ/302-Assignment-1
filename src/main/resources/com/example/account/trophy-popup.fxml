<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aiconceptsexplorer.account.TrophyPopupController"> <!-- Corrected controller reference -->
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <!-- Existing buttons in your popup -->
    <Button mnemonicParsing="false" onAction="#TrophyPopup1" prefHeight="100.0" prefWidth="100.0" text="trophy 1"
            style="-fx-background-radius: 50; -fx-min-width: 100px; -fx-min-height: 100px; -fx-max-width: 100px; -fx-max-height: 100px; -fx-background-color: #696773; -fx-text-fill: white;"/>
    <Button mnemonicParsing="false" onAction="#TrophyPopup2" prefHeight="100.0" prefWidth="100.0" text="trophy 2"
            style="-fx-background-radius: 50; -fx-min-width: 100px; -fx-min-height: 100px; -fx-max-width: 100px; -fx-max-height: 100px; -fx-background-color: #696773; -fx-text-fill: white;"/>
    <Button mnemonicParsing="false" onAction="#TrophyPopup3" prefHeight="100.0" prefWidth="100.0" text="trophy 3"
            style="-fx-background-radius: 50; -fx-min-width: 100px; -fx-min-height: 100px; -fx-max-width: 100px; -fx-max-height: 100px; -fx-background-color: #696773; -fx-text-fill: white;"/>

</VBox>
