<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #272829;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learnscreen.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="80" prefWidth="1100" spacing="20.0" style="-fx-background-color: #48494a;                  -fx-padding: 10px;                  -fx-background-radius: 5;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
      <Region prefHeight="47.0" prefWidth="44.0" />
        <Button onAction="#onFirstButtonClick" prefHeight="25.0" prefWidth="192.0" style="-fx-background-color: #686b6e; -fx-text-fill: white;" text="Learn" />
      <Region prefHeight="47.0" prefWidth="115.0" />
        <Button onAction="#onSecondButtonClick" prefHeight="25.0" prefWidth="209.0" style="-fx-background-color: #686b6e; -fx-text-fill: white;" text="Leaderboard" />
        <Region prefHeight="47.0" prefWidth="19.0" HBox.hgrow="ALWAYS" />
        <Button onAction="#onThirdButtonClick" style="-fx-background-color: #686b6e;-fx-text-fill: white;-fx-background-radius: 50%;-fx-min-width: 40px;-fx-min-height: 40px;                        -fx-max-width: 40px;                        -fx-max-height: 40px;                        -fx-alignment: center;">
         <graphic>
            <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Profile.png" />
               </image></ImageView>
         </graphic></Button>
      <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="48.0" style="-fx-background-color: #48494a; -fx-text-fill: white;">
         <graphic>
            <ImageView fitHeight="39.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Settings.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button mnemonicParsing="false" style="-fx-background-color: #48494a;">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Exit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </HBox>

    <HBox alignment="TOP_CENTER" prefHeight="600" prefWidth="1100" spacing="20.0" style="-fx-background-color: #48494a;              -fx-background-radius: 5;              -fx-padding: 20px;              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

        <VBox alignment="TOP_CENTER" prefHeight="560" prefWidth="1100">
            <!-- Top space: 75% of height -->
            <Region prefHeight="140" />

            <!-- Buttons row -->
            <HBox alignment="CENTER" spacing="250">
                <Button onAction="#onLessonButtonClick" style="-fx-background-color: #686b6e;                            -fx-text-fill: white;                            -fx-background-radius: 50%;                            -fx-min-width: 100px;                            -fx-min-height: 100px;                            -fx-max-width: 100px;                            -fx-max-height: 100px;                            -fx-alignment: center;">
               <graphic>
                  <ImageView fx:id="myImageView" fitHeight="109.0" fitWidth="86.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../Images/Lesson.png" />
                     </image>
                  </ImageView>
               </graphic></Button>

                <Button onAction="#onQuizButtonClick" style="-fx-background-color: #686b6e;                            -fx-text-fill: white;                            -fx-background-radius: 50%;                            -fx-min-width: 100px;                            -fx-min-height: 100px;                            -fx-max-width: 100px;                            -fx-max-height: 100px;                            -fx-alignment: center;" text="Quiz">
               <graphic>
                  <ImageView fitHeight="73.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../Images/Quiz.png" />
                     </image>
                  </ImageView>
               </graphic></Button>

                <Button onAction="#onGlossaryButtonClick" style="-fx-background-color: #686b6e;                            -fx-text-fill: white;                            -fx-background-radius: 50%;                            -fx-min-width: 100px;                            -fx-min-height: 100px;                            -fx-max-width: 100px;                            -fx-max-height: 100px;                            -fx-alignment: center;">
               <graphic>
                  <ImageView fitHeight="77.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../Images/Glossary.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            </HBox>

            <Region prefHeight="150" />
            <!-- Line below the buttons -->
            <Rectangle arcHeight="10" arcWidth="10" fill="white" height="3" width="1000">
                <effect>
                    <DropShadow color="#ffffff99" radius="30" spread="0.2" />
                </effect>
            </Rectangle>

            <Region prefHeight="23.0" prefWidth="1000.0" />

            <HBox alignment="CENTER" spacing="250">

                <VBox fx:id="lessonOptions" spacing="10" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Polygon fx:id="continueLessonDiamond" fill="white" points="5,0,10,5,5,10,0,5" />
                        <Button onAction="#onContinueLessonButtonClick" text="Continue lessons" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Polygon fx:id="searchLessonDiamond" fill="gray" points="5,0,10,5,5,10,0,5" />
                        <Button onAction="#onSearchLessonButtonClick" text="Search for new lessons" />
                    </HBox>
                </VBox>

                <VBox fx:id="quizOptions" spacing="10" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Polygon fx:id="continueQuizDiamond" fill="white" points="5,0,10,5,5,10,0,5" />
                        <Button onAction="#onContinueQuizButtonClick" text="Continue quiz" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Polygon fx:id="searchQuizDiamond" fill="gray" points="5,0,10,5,5,10,0,5" />
                        <Button onAction="#onSearchQuizButtonClick" text="Search for new quizzes" />
                    </HBox>
                </VBox>

                <VBox fx:id="glossaryOptions" spacing="10" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Polygon fx:id="continueGlossaryDiamond" fill="white" points="5,0,10,5,5,10,0,5" />
                        <Button onAction="#onContinueGlossaryButtonClick" text="Continue glossary" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Polygon fx:id="searchGlossaryDiamond" fill="gray" points="5,0,10,5,5,10,0,5" />
                        <Button onAction="#onSearchGlossaryButtonClick" text="Search for new words" />
                    </HBox>
                </VBox>

            </HBox>

            <!-- Bottom space: 25% of height -->
            <Region prefHeight="387.0" prefWidth="100.0" />

            <!-- Add Confirm Button Here -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="confirmButton"
                        onAction="#onConfirmButtonClick"
                        text="Confirm"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;"
                        prefWidth="200"
                        prefHeight="40">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>
                </Button>
            </HBox>

        </VBox>
    </HBox>
</VBox>
