<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #768381;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aiconceptsexplorer.learnscreen.GlossaryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="80" prefWidth="1100" spacing="20.0" style="-fx-background-color: #619BA0; -fx-padding: 10px; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
        <Region prefHeight="47.0" prefWidth="44.0" />
        <Button onAction="#onLearnTabClick" prefHeight="25.0" prefWidth="192.0" style="-fx-background-color: #1E7779; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 4); -fx-border-color: #363946; -fx-border-radius: 2.5; -fx-border-width: 1.5;" text="Learn" />
        <Region prefHeight="47.0" prefWidth="115.0" />
        <Button onAction="#onLeaderboardTabClick" prefHeight="25.0" prefWidth="209.0" style="-fx-background-color: #1E7779; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 4); -fx-border-color: #363946; -fx-border-radius: 2.5; -fx-border-width: 1.5;" text="Leaderboard" />
        <Region prefHeight="47.0" prefWidth="19.0" HBox.hgrow="SOMETIMES" />
        <Button onAction="#onAccountTabClick" style="-fx-background-color: #619BA0; -fx-text-fill: white; -fx-background-radius: 50%; -fx-min-width: 40px; -fx-min-height: 40px; -fx-max-width: 40px; -fx-max-height: 40px; -fx-alignment: center;">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Profile.png" />
                    </image></ImageView>
            </graphic></Button>
        <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="48.0" style="-fx-background-color: #619BA0; -fx-text-fill: white;">
            <graphic>
                <ImageView fitHeight="39.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Settings.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" style="-fx-background-color: #619BA0;">
            <graphic>
                <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Exit.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Content Area -->
    <VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="1100" spacing="20.0" style="-fx-background-color: #619BA0; -fx-background-radius: 5; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

        <!-- 🔍 Search Bar -->
        <TextField fx:id="searchField" prefWidth="400" promptText="Search glossary..." style="-fx-background-color: #1E7779; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc; -fx-font-size: 16px; -fx-background-radius: 5px; -fx-padding: 8px; -fx-border-color: #363946; -fx-border-radius: 2.5px; -fx-border-width: 1.5px;" />

        <!-- ListView with outline and top alignment -->
        <ListView fx:id="glossaryList" prefHeight="304.0" prefWidth="720.0" style="-fx-control-inner-background: #196365; -fx-background-color: #196365; -fx-text-fill: white; -fx-font-size: 24px; -fx-background-insets: 0; -fx-padding: 5px; -fx-selection-bar: #1E7779; -fx-selection-bar-non-focused: #1E7779; -fx-border-color: #363946; -fx-border-width: 1.5px; -fx-border-radius: 5px; -fx-background-radius: 5px;" VBox.vgrow="NEVER" />

        <Label fx:id="definitionLabel" prefWidth="600" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-background-color: #1E7779; -fx-padding: 10px; -fx-background-radius: 5px; -fx-border-color: #48494a; -fx-border-width: 2px;" text="Select a term to see its definition" wrapText="true" />

    </VBox>
</VBox>
