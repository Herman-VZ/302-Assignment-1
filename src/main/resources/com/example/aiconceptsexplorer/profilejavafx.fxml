<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #696773;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.leaderboardscreen.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="760.0" spacing="20.0" style="-fx-background-color: #363946; -fx-padding: 10px; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5);">
        <Button onAction="#onLearnTabClick" prefHeight="43.0" prefWidth="100.0" style="-fx-background-color: #696773; -fx-text-fill: white;" text="Learn" />
        <Button onAction="#onLeaderboardTabClick" prefHeight="43.0" prefWidth="100.0" style="-fx-background-color: #696773; -fx-text-fill: white;" text="Leaderboard" textAlignment="CENTER" />
        <Region HBox.hgrow="ALWAYS" />
      <Avatar radius="20.0" viewOrder="1.0">
         <image>
            <Image url="@10337609.png" />
         </image>
      </Avatar>
      <Button mnemonicParsing="false" onAction="#OnUserInfoClick" prefHeight="28.0" prefWidth="91.0" style="-fx-background-color: #696773; -fx-text-fill: white;" text="User Info" />
    </HBox>

    <!-- Main Content Area -->
    <VBox alignment="CENTER_LEFT" prefHeight="460.0" prefWidth="684.0" spacing="20.0" style="-fx-background-color: #B1B6A6; -fx-background-radius: 2; -fx-padding: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5); -fx-border-color: #363946; -fx-border-width: 10;">
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="25.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="39.0" minHeight="0.0" prefHeight="37.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="86.0" minHeight="10.0" prefHeight="53.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="25.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Button mnemonicParsing="false" onAction="#TrophyDisplay1" prefHeight="53.0" prefWidth="110.0" style="-fx-border-width: 100;" text="Trophy button 1">
                     <font>
                        <Font size="11.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" onAction="#TrophyDisplay2" prefHeight="57.0" prefWidth="110.0" text="Trophy button 2" />
                  <Button mnemonicParsing="false" onAction="#TrophyDisplay3" prefHeight="53.0" prefWidth="110.0" text="Trophy button 3" />
               </children>
            </HBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Profile Name" textOrigin="CENTER" wrappingWidth="104.748046875" GridPane.rowIndex="3" />
            <Avatar radius="50.0" style="-fx-background-size: 20px;" viewOrder="1.0" GridPane.rowIndex="1">
               <image>
                  <Image url="@10337609.png" />
               </image>
            </Avatar>
         </children>
      </GridPane>
      <Region />
      <HBox prefHeight="80.0" prefWidth="720.0" style="-fx-background-color: #73A580;">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <HBox prefHeight="80.0" prefWidth="725.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#TrophyDisplay1" prefHeight="110.0" prefWidth="110.0" style="-fx-border-width: 100;" text="Trophy button 1">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#TrophyDisplay2" prefHeight="109.0" prefWidth="110.0" text="Trophy button 2" />
                  <Button mnemonicParsing="false" onAction="#TrophyDisplay3" prefHeight="81.0" prefWidth="110.0" text="Trophy button 3" />
               </children>
            </HBox>
         </children>
      </HBox>
    </VBox>
</VBox>
