<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.leaderboardscreen.HelloController"
      spacing="20.0" alignment="TOP_CENTER"
      prefWidth="800.0" prefHeight="600.0"
      style="-fx-background-color: #272829;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Raised grey banner -->
    <HBox spacing="20.0" alignment="CENTER_LEFT"
          prefWidth="1100" prefHeight="80"
          style="-fx-background-color: #48494a;
                 -fx-padding: 10px;
                 -fx-background-radius: 5;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
        <Button text="X" onAction="#onFirstButtonClick"
                style="-fx-background-color: #686b6e; -fx-text-fill: white;"/>
        <Button text="X" onAction="#onSecondButtonClick"
                style="-fx-background-color: #686b6e; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="X" onAction="#onThirdButtonClick"
                style="-fx-background-color: #686b6e;
                       -fx-text-fill: white;
                       -fx-background-radius: 50%;
                       -fx-min-width: 40px;
                       -fx-min-height: 40px;
                       -fx-max-width: 40px;
                       -fx-max-height: 40px;
                       -fx-alignment: center;"/>
    </HBox>

    <!-- Main Content Area -->
    <VBox alignment="TOP_CENTER" spacing="20.0"
          prefWidth="1100" prefHeight="600"
          style="-fx-background-color: #48494a;
                 -fx-background-radius: 5;
                 -fx-padding: 20px;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

        <!-- ListView with outline and top alignment -->
        <ListView fx:id="userListView"
                  prefWidth="400"
                  prefHeight="200"
                  VBox.vgrow="ALWAYS"
                  style="-fx-control-inner-background: #48494a;
                         -fx-background-color: #48494a;
                         -fx-text-fill: white;
                         -fx-font-size: 24px;
                         -fx-background-insets: 0;
                         -fx-padding: 5px;
                         -fx-selection-bar: #686b6e;
                         -fx-selection-bar-non-focused: #686b6e;
                         -fx-border-color: #686b6e;
                         -fx-border-width: 2px;
                         -fx-border-radius: 5px;"/>
    </VBox>
</VBox>