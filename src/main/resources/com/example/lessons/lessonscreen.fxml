<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0"
      style="-fx-background-color: #768381;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aiconceptsexplorer.lessons.lessoncontroller">

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="80" prefWidth="1100" spacing="20.0"
          style="-fx-background-color: #619BA0; -fx-padding: 10px;
                 -fx-background-radius: 5;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
        <Region prefHeight="47.0" prefWidth="44.0" />
        <Button onAction="#onFirstButtonClick" prefHeight="25.0" prefWidth="192.0"
                style="-fx-background-color: #1E7779; -fx-text-fill: white;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 4);
                       -fx-border-color: #363946; -fx-border-radius: 2.5; -fx-border-width: 1.5;"
                text="Learn" />
        <Region prefHeight="47.0" prefWidth="115.0" />
        <Button onAction="#onLeaderboardTabClick" prefHeight="25.0" prefWidth="209.0"
                style="-fx-background-color: #1E7779; -fx-text-fill: white;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 4);
                       -fx-border-color: #363946; -fx-border-radius: 2.5; -fx-border-width: 1.5;"
                text="Leaderboard" />
        <Region prefHeight="47.0" prefWidth="19.0" HBox.hgrow="SOMETIMES" />
        <Button onAction="#onAccountTabClick"
                style="-fx-background-color: #619BA0; -fx-text-fill: white;
                       -fx-background-radius: 50%;
                       -fx-min-width: 40px; -fx-min-height: 40px;
                       -fx-max-width: 40px; -fx-max-height: 40px;
                       -fx-alignment: center;">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Profile.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="48.0"
                style="-fx-background-color: #619BA0; -fx-text-fill: white;">
            <graphic>
                <ImageView fitHeight="39.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Settings.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="logoutButton" onAction="#onlogoutButtonClick" mnemonicParsing="false"
                style="-fx-background-color: #619BA0;">
            <graphic>
                <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Exit.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Lesson container with gradient background -->
    <HBox alignment="TOP_CENTER" prefHeight="600" prefWidth="1100" spacing="20.0"
          style="-fx-background-color: linear-gradient(to bottom,  #619BA0, #4A8B8F 70%, #3A7B80);
                 -fx-background-radius: 5;
                 -fx-padding: 20px;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

        <!-- Injected lesson pane -->
        <ScrollPane fx:id="lessonScroll" fitToWidth="true" prefWidth="760" prefHeight="560">
            <VBox fx:id="contentBox" spacing="15">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </ScrollPane>

    </HBox>

    <!-- Navigation Buttons -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 20 0;">
        <Button fx:id="prevButton" text="Previous" onAction="#onPrevClick" />
        <Button fx:id="nextButton" text="Next" onAction="#onNextClick" />
    </HBox>

</VBox>