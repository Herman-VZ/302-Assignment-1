<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #272829;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.learnscreen.GlossaryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="80" prefWidth="1100" spacing="20.0" style="-fx-background-color: #48494a;                  -fx-padding: 10px;                  -fx-background-radius: 5;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
      <Region prefHeight="47.0" prefWidth="44.0" />
        <Button onAction="#onFirstButtonClick" prefHeight="25.0" prefWidth="192.0" style="-fx-background-color: #686b6e; -fx-text-fill: white;" text="Learn" />
      <Region prefHeight="47.0" prefWidth="115.0" />
        <Button onAction="#onSecondButtonClick" prefHeight="25.0" prefWidth="209.0" style="-fx-background-color: #686b6e; -fx-text-fill: white;" text="Leaderboard" />
        <Region prefHeight="47.0" prefWidth="19.0" HBox.hgrow="ALWAYS" />
        <Button onAction="#onThirdButtonClick" style="-fx-background-color: #686b6e;-fx-text-fill: white;-fx-background-radius: 50%;-fx-min-width: 40px;-fx-min-height: 40px;                        -fx-max-width: 40px;                        -fx-max-height: 40px;                        -fx-alignment: center;">
         <graphic>
            <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Profile.png" />
               </image></ImageView>
         </graphic></Button>
      <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="48.0" style="-fx-background-color: #48494a; -fx-text-fill: white;">
         <graphic>
            <ImageView fitHeight="39.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Settings.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button mnemonicParsing="false" style="-fx-background-color: #48494a;">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Exit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </HBox>

    <!-- Main Content Area -->
    <VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="1100" spacing="20.0" style="-fx-background-color: #48494a;                  -fx-background-radius: 5;                  -fx-padding: 20px;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

        <!-- 🔍 Search Bar -->
        <TextField fx:id="searchField"
                   promptText="Search glossary..."
                   style="-fx-background-color: #686b6e; -fx-text-fill: white; -fx-prompt-text-fill: #cccccc; -fx-font-size: 16px; -fx-background-radius: 5px; -fx-padding: 8px;"
                   prefWidth="400"/>

        <!-- ListView with outline and top alignment -->
        <ListView fx:id="glossaryList" prefHeight="304.0" prefWidth="720.0" style="-fx-control-inner-background: #48494a;                          -fx-background-color: #48494a;                          -fx-text-fill: white;                          -fx-font-size: 24px;                          -fx-background-insets: 0;                          -fx-padding: 5px;                          -fx-selection-bar: #686b6e;                          -fx-selection-bar-non-focused: #686b6e;                          -fx-border-color: #686b6e;                          -fx-border-width: 2px;                          -fx-border-radius: 5px;" VBox.vgrow="NEVER" />

        <Label fx:id="definitionLabel" prefWidth="600" style="-fx-text-fill: white;                       -fx-font-size: 18px;                       -fx-background-color: #686b6e;                       -fx-padding: 10px;                       -fx-background-radius: 5px;                       -fx-border-color: #48494a;                       -fx-border-width: 2px;" text="Select a term to see its definition" wrapText="true" />

    </VBox>
</VBox>
