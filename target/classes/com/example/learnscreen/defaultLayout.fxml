<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aiconceptsexplorer.learnscreen.LearnController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="80" prefWidth="1100" spacing="20.0" style="-fx-background-color: #243a5e; -fx-padding: 10px; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5);">
      <Region prefHeight="47.0" prefWidth="44.0" />
        <Button onAction="#onFirstButtonClick" prefHeight="104.0" prefWidth="165.0" style="-fx-background-color: #0078d7; -fx-text-fill: white;" text="LEARN">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Region prefHeight="47.0" prefWidth="115.0" />
        <Button onAction="#onSecondButtonClick" prefHeight="85.0" prefWidth="189.0" style="-fx-background-color: #0078d7; -fx-text-fill: white;" text="LEADERBOARD">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
        <Region prefHeight="47.0" prefWidth="19.0" HBox.hgrow="ALWAYS" />
        <Button onAction="#onThirdButtonClick" style="-fx-background-color: white; -fx-text-fill: white; -fx-background-radius: 50%; -fx-min-width: 40px; -fx-min-height: 40px; -fx-max-width: 40px; -fx-max-height: 40px; -fx-alignment: center;">
         <graphic>
            <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Profile.png" />
               </image></ImageView>
         </graphic></Button>
      <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="48.0" style="-fx-background-color: white; -fx-text-fill: white;">
         <graphic>
            <ImageView fitHeight="39.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Settings.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button mnemonicParsing="false" style="-fx-background-color: white;">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Exit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </HBox>

    <HBox alignment="TOP_CENTER" prefHeight="600" prefWidth="1100" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom,  #dde3e6 50%, #dde3e6)linear-gradient(to bottom,  #dde3e6 50%, #dde3e6); -fx-background-radius: 5; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5);">

    </HBox>
</VBox>
