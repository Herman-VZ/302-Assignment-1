<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #768381;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aiconceptsexplorer.leaderboardscreen.LeaderController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Raised grey banner -->
    <HBox alignment="CENTER_LEFT" prefHeight="80" prefWidth="1100" spacing="20.0" style="-fx-background-color: #619BA0; -fx-padding: 10px; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
        <Region prefHeight="47.0" prefWidth="44.0" />
        <Button onAction="#onThirdButtonClick" prefHeight="25.0" prefWidth="192.0" style="-fx-background-color: #1E7779; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 4); -fx-border-color: #363946; -fx-border-radius: 2.5; -fx-border-width: 1.5;" text="Learn" />
        <Region prefHeight="47.0" prefWidth="115.0" />
        <Button onAction="#onSecondButtonClick" prefHeight="25.0" prefWidth="209.0" style="-fx-background-color: #1E7779; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 2, 4); -fx-border-color: #363946; -fx-border-radius: 2.5; -fx-border-width: 1.5;" text="Leaderboard" />
        <Region prefHeight="47.0" prefWidth="19.0" HBox.hgrow="SOMETIMES" />
        <Button onAction="#onFirstButtonClick" style="-fx-background-color: #619BA0; -fx-text-fill: white; -fx-background-radius: 50%; -fx-min-width: 40px; -fx-min-height: 40px; -fx-max-width: 40px; -fx-max-height: 40px; -fx-alignment: center;">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Profile.png" />
                    </image></ImageView>
            </graphic></Button>
        <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="48.0" style="-fx-background-color: #619BA0; -fx-text-fill: white;">
            <graphic>
                <ImageView fitHeight="39.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Settings.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button onAction="#onLogOutClick" style="-fx-background-color: #619BA0;">
            <graphic>
                <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../Images/Exit.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>


    <!-- Main Content Area - matching account screen style -->
    <VBox alignment="TOP_CENTER" prefHeight="460.0" prefWidth="684.0" spacing="20.0" style="-fx-background-color: #619BA0; -fx-background-radius: 2; -fx-padding: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5); -fx-border-color: #363946; -fx-border-width: 10;">

        <!-- ListView with matching style -->
        <ListView fx:id="userListView" prefHeight="300" prefWidth="600" style="-fx-control-inner-background: #1E7779; -fx-background-color: #1E7779; -fx-text-fill: #363946; -fx-font-size: 18px; -fx-background-insets: 0; -fx-padding: 5px; -fx-selection-bar: #619BA0; -fx-selection-bar-non-focused: #619BA0; -fx-border-color: #363946; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px;" VBox.vgrow="ALWAYS" />

        <!-- Bottom section similar to account screen -->
        <Region VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0" style="-fx-background-color: #1E7779;">
            <children>
                <Region HBox.hgrow="ALWAYS" />
                <Text style="-fx-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #5e8b7e; -fx-background-radius: 10; -fx-padding: 10px 20px;" text="Your Rank" />
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </VBox>
</VBox>
