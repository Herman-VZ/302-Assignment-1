<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.leaderboardscreen.LeaderController"
      spacing="20.0" alignment="TOP_CENTER"
      prefWidth="800.0" prefHeight="600.0"
      style="-fx-background-color: #696773;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Raised grey banner - matching account screen style -->
    <HBox spacing="20.0" alignment="CENTER_LEFT"
          prefHeight="44.0" prefWidth="760.0"
          style="-fx-background-color: #363946;
                 -fx-padding: 10px;
                 -fx-background-radius: 5;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5);">
        <Button text="Learn" onAction="#onThirdButtonClick"
                prefHeight="43.0" prefWidth="100.0"
                style="-fx-background-color: #696773; -fx-text-fill: white;"/>
        <Button text="Leaderboard" onAction="#onSecondButtonClick"
                prefHeight="43.0" prefWidth="120.0"
                style="-fx-background-color: #696773; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
            <image>
                <Image url="@10337609.png" />
            </image>
        </ImageView>
        <Button text="A" onAction="#onFirstButtonClick"
                mnemonicParsing="false"
                prefHeight="28.0" prefWidth="40.0"
                style="-fx-background-color: #696773;
                       -fx-text-fill: white;
                       -fx-background-radius: 50%;
                       -fx-min-width: 40px;
                       -fx-min-height: 40px;
                       -fx-max-width: 40px;
                       -fx-max-height: 40px;
                       -fx-alignment: center;"/>
    </HBox>

    <!-- Main Content Area - matching account screen style -->
    <VBox alignment="TOP_CENTER" spacing="20.0"
          prefHeight="460.0" prefWidth="684.0"
          style="-fx-background-color: #B1B6A6;
                 -fx-background-radius: 2;
                 -fx-padding: 20px;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 5, 5);
                 -fx-border-color: #363946;
                 -fx-border-width: 10;">

        <!-- ListView with matching style -->
        <ListView fx:id="userListView"
                  prefWidth="600"
                  prefHeight="300"
                  VBox.vgrow="ALWAYS"
                  style="-fx-control-inner-background: #B1B6A6;
                         -fx-background-color: #B1B6A6;
                         -fx-text-fill: #363946;
                         -fx-font-size: 18px;
                         -fx-background-insets: 0;
                         -fx-padding: 5px;
                         -fx-selection-bar: #696773;
                         -fx-selection-bar-non-focused: #696773;
                         -fx-border-color: #363946;
                         -fx-border-width: 2px;
                         -fx-border-radius: 5px;"/>

        <!-- Bottom section similar to account screen -->
        <Region VBox.vgrow="ALWAYS" />

        <HBox prefHeight="80.0" spacing="20.0" alignment="CENTER" style="-fx-background-color: #73A580;">
            <children>
                <Region HBox.hgrow="ALWAYS" />
                <Text text="Your Rank" style="-fx-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #5e8b7e; -fx-background-radius: 10; -fx-padding: 10px 20px;"/>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </VBox>
</VBox>